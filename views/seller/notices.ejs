<!-- views/seller/notices.ejs -->

<h1>공지사항 페이지</h1>

<!-- 등록 버튼 -->
<a href="/seller/notices/create" class="btn btn-primary">등록</a>

<!-- 공지사항 목록 -->
<table class="table">
  <thead>
    <tr>
      <th>제목</th>
      <th>작성자</th>
      <th>작성일</th>
      <th></th> <!-- 수정, 삭제 버튼이 들어갈 열 -->
    </tr>
  </thead>
  <tbody>
    <% for (let i = 0; i < notices.length; i++) { %>
      <tr>
        <td><%= notices[i].title %></td>
        <td><%= notices[i].author %></td>
        <td><%= notices[i].createdAt %></td>
        <td>
          <!-- 수정 버튼 -->
          <a href="/seller/notices/<%= notices[i].id %>/edit" class="btn btn-primary btn-sm">수정</a>
          <!-- 삭제 버튼 -->
          <form action="/seller/notices/<%= notices[i].id %>/delete" method="POST" onsubmit="return confirm('정말로 삭제하시겠습니까?');">
            <button type="submit" class="btn btn-danger btn-sm">삭제</button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
